targetType "executable"
targetPath "bin"


configuration "executable" {

}


configuration "library" {
    targetType "library"
    excludedSourceFiles "source/main.d"
}


configuration "unittest" {
    targetName "ut"
    excludedSourceFiles "source/main.d"
    mainSourceFile "tests/main.d"
    sourcePaths "tests"
    importPaths "tests"

    dependency "unit-threaded" version="*"
}
